%h1.page-header
  Creators
  %small / Index
.row
  .col-md-12
    .text-right
      = link_to new_creator_path do
        %button.btn.btn-success{type: "button"} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Type
            %th Name
            %th Sort Name
            %th.action-cell
        %tbody
          - @masters.each do |creator|
            %tr
              %td= creator.id
              %td= creator.kind
              %td= creator.full_name || [creator.first_name, creator.last_name].join(' ')
              %td= creator.sort_name
              %td.action-cell
                = link_to creator do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                %span.spacer
                = link_to edit_creator_path(creator) do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12.text-right
    = paginate @masters
